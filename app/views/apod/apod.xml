<Page xmlns="http://www.nativescript.org/tns.xsd"
        actionBarHidden="true"
        xmlns:nativescript-fresco="nativescript-fresco" 
        xmlns:nativescript-youtube-player="nativescript-youtube-player" 
        loaded="onPageLoaded" 
        navigatedTo="onPageNavigatedTo">

    <ScrollView swipe="onScrollSwipe">
        <StackLayout>
            <android>
                <nativescript-youtube-player:YouTubePlayerView id="player" 
                                                            apiKey="{{ youtube_api_key }}" 
                                                            videoKey="{{ youtube_video_key }}" 
                                                            visibility="{{ isPlayerVisible ? 'visible' : 'collapsed' }}"/>
                <nativescript-fresco:FrescoDrawee id="fr-img"
                                                imageUri="{{ dataItem.url }}"
                                                placeholderImageUri="res://logo"
                                                actualImageScaleType="centerCrop"                                                           
                                                verticalAlignment="top"
                                                aspectRatio="1.33"
                                                showProgressBar="true"
                                                tapToRetryEnabled="true"
                                                finalImageSet="onFinalImageSet" 
                                                visibility="{{ !isPlayerVisible ? 'visible' : 'collapsed' }}"/>            
                <GridLayout columns="*, *, *, *, *" class="toolbar">
                    <Button col="0" text="&#xf053;" id="btn-prev" tap="previousDate" class="fa btn nav" />
                    <Button col="1" text="&#xf019;" id="btn-save" tap="onSaveImage" class="fa btn nav" /> 
                    <Button col="2" text="&#xf108;" id="btn-desk" tap="onSetWallpaper" class="fa btn nav"/> 
                    <Button col="3" text="&#xf1e0;" id="btn-shar" tap="onShare" class="fa btn nav" />     
                    <Button col="4" text="&#xf054;" id="btn-next" tap="nextDate" class="fa btn nav" />   
                </GridLayout>
            </android>

            <ios>
                <Image src="{{ dataItem.url }}" id="ios-image" stretch="aspectFill" />
                <GridLayout rows="*" columns="*, *, *, *, *">
                    <Button col="0" text="&#xf053;" id="btn-prev" tap="previousDate" class="fa" />
                    <Button col="1" text="&#xf019;" id="btn-save" tap="onSaveImage" class="fa" /> 
                    <Button col="2" text="&#xf108;" id="btn-desk" tap="onSetWallpaper" class="fa"/> 
                    <Button col="3" text="&#xf1e0;" id="btn-shar" tap="onShare" class="share fa" />    
                    <Button col="4" text="&#xf054;" id="btn-next" tap="nextDate" class="fa" />   
                </GridLayout>
            </ios>

            <Label text="{{ dataItem.title }}" class="h3 p-t-16 p-l-16" textWrap="true" />
            <Label text="{{ dataItem.explanation }}" class="p-16" textWrap="true" />
            <Label text="{{ 'Astronomical photo of ' + dataItem.date }}" class="p-b-16 p-l-16" textWrap="true" />     
        </StackLayout>                  
    </ScrollView>
</Page>