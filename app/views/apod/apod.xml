    <dpg:DrawerPage.sideDrawer>
        <drawer:RadSideDrawer id="sideDrawer">
            <drawer:RadSideDrawer.drawerContent>
                <StackLayout>
                    <StackLayout>
                        <Label text="Navigation Menu"/>
                    </StackLayout>
                    <ScrollView>
                        <StackLayout>
                            <Button text="Main Page" tap="{{ goToMainPage }}"  />
                            <Button text="Mars Rovers Photos" tap="{{ goToRoversSelectionPage }}" />
                            <Button text="Astronomy Pic of the Day" tap="{{ goToApod }}" />
                            <Button text="Asteroids" />
                            <Button text="EONET" />
                            <Button text="Earth" />
                            <Button text="Space Sounds" />
                        </StackLayout>
                    </ScrollView>
                </StackLayout>
            </drawer:RadSideDrawer.drawerContent>
        </drawer:RadSideDrawer> 
    </dpg:DrawerPage.sideDrawer>

    <GridLayout id="pageContainer" class="pageContainer" rows="*" columns="*">
        <ListView items="{{ dataItems }}">
            <ListView.itemTemplate>
                <StackLayout>
                    <Label text="{{ title }}" textWrap="true" />
                    <Label text="{{ date }}" textWrap="true" />
                    <nativescript-fresco:FrescoDrawee row="1" col="0" colSpan="2"
                                        imageUri="{{ url }}"
                                        backgroundUri="res://logo"
                                        actualImageScaleType="centerCrop"                                                           
                                        verticalAlignment="top"
                                        aspectRatio="1.5"
                                        roundedCornerRadius="50"
                                        roundBottomRight="true"
                                        roundBottomLeft="true"
                                        showProgressBar="true"
                                        tapToRetryEnabled="true"
                                        finalImageSet="onFinalImageSet"/>
                    <TextView text="{{ explanation }}" editable="false" />
                </StackLayout>
                                    
                <!--<Image src="{{ url }}" stretch="none" />-->
            </ListView.itemTemplate>
        </ListView>
    </GridLayout>
</dpg:DrawerPage>