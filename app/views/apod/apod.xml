    <ScrollView>
        <StackLayout id="pageContainer" class="pageContainer" >
            <GridLayout rows="60" columns="*, *">
                <Button col="0" text="previous" tap="previousDate" />
                <Button col="1" text="next" tap="nextDate" />
            </GridLayout>
            <Label text="{{ dataItem.title }}" textWrap="true" />
            <Label text="{{ dataItem.date }}" textWrap="true" />
            <android>
                <StackLayout id="st-parent">
                    <nativescript-fresco:FrescoDrawee
                                        imageUri="{{ dataItem.url }}"
                                        backgroundUri="res://logo"
                                        actualImageScaleType="centerCrop"                                                           
                                        verticalAlignment="top"
                                        aspectRatio="1.2"
                                        roundedCornerRadius="50"
                                        roundBottomRight="true"
                                        roundBottomLeft="true"
                                        showProgressBar="true"
                                        tapToRetryEnabled="true"
                                        finalImageSet="onFinalImageSet"/>
                     <Button id="btn-share" text="&#xf1e0;" class="font-awesome" visibility="{{ isItemVisible ? 'visible' : 'collapsed' }}"/>                     
                </StackLayout>
            </android>
            <ios>
                <StackLayout id="st-parent-ios" loaded="onIosStackLoaded" >
                    <Image src="{{ dataItem.url }}" id="ios-image" stretch="fill" />
                    <Button id="tn-share-ios" text="&#xf1e0;" tap="onIosShare" class="font-awesome" visibility="{{ isItemVisible ? 'visible' : 'collapsed' }}"/>
                </StackLayout>
            </ios>
            <TextView text="{{ dataItem.explanation }}" editable="false" />
        </StackLayout>               
        
    </ScrollView>

</Page>