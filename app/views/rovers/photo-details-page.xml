<Page xmlns="http://www.nativescript.org/tns.xsd"
      xmlns:nativescript-fresco="nativescript-fresco"
      class="drawer-page"
      loaded="onPageLoaded">

    <Page.actionBar>
      <ActionBar>
        <ActionBar.titleView>
            <StackLayout orientation="horizontal">
                <Label text="COSMOS Data Bank" />
            </StackLayout>
        </ActionBar.titleView>
      </ActionBar>
    </Page.actionBar>

    <ScrollView>
        <StackLayout class="pageContainer">
            <android>
                <nativescript-fresco:FrescoDrawee imageUri="{{ contextItem.imageUri }}"
                                                backgroundUri="res://logo"
                                                actualImageScaleType="centerCrop"                                                           
                                                verticalAlignment="top"
                                                aspectRatio="1.5"
                                                roundedCornerRadius="50"
                                                roundBottomRight="true"
                                                roundBottomLeft="true"
                                                showProgressBar="true"
                                                tapToRetryEnabled="true"
                                                finalImageSet="onFinalImageSet"/>
            </android>
            <ios>
                <Image src="{{ contextItem.imageUri }}" stretch ="none" /> 
            </ios>
            <Label text="{{ 'id: ' + contextItem.id }}" color="gray" textWrap="true" />
            <Label text="{{ 'sol: ' + contextItem.sol }}" textWrap="true" />
            <Label text="{{ 'camera id: ' + contextItem.cameraId }}" textWrap="true" />
            <Label text="{{ 'camera name: ' + contextItem.cameraName }}" textWrap="true" />
            <Label text="{{ 'rover id: ' + contextItem.cameraRoverId }}" textWrap="true" />
            <Label text="{{ 'cam full name: ' + contextItem.cameraFullName }}" textWrap="true" />
            <Label text="{{ 'earth day: ' + contextItem.earthDate }}" textWrap="true" />
        </StackLayout>
    </ScrollView>
</Page>