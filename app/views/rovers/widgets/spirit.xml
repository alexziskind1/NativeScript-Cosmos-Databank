<ScrollView>
    <StackLayout class="stackStyle" >
        <SegmentedBar selectedIndex="{{ selectedIndexSpi }}">
            <SegmentedBar.items>
                <SegmentedBarItem title="Info" />
                <SegmentedBarItem title="Photos" />
            </SegmentedBar.items>
        </SegmentedBar>
        <GridLayout rows="*" columns="*" margin="10" visibility="{{ isSpiInfoVisible ? 'visible' : 'collapsed' }}" >
            <TextView text="{{ spiritDescription }}" editable="false" />
        </GridLayout>
        <GridLayout rows="auto, auto" columns="*" margin="10" visibility="{{ !isSpiInfoVisible ? 'visible' : 'collapsed' }}" >
            <DatePicker row="0" id="dt-spi" class="dt"></DatePicker>
            <Button row="1" text="Explore Spirit Photos" class="btn-picker" tap="{{ goToSpiritPage }}" />
        </GridLayout>
    </StackLayout>  
</ScrollView>
