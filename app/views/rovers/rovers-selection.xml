<dpg:DrawerPage xmlns="http://www.nativescript.org/tns.xsd"
        xmlns:dpg="nativescript-telerik-ui/sidedrawer/drawerpage"
        xmlns:drawer="nativescript-telerik-ui/sidedrawer" 
        xmlns:Card="nativescript-cardview"
        class="drawer-page"
        loaded="onPageLoaded" 
        navigatedTo="onNavigatedTo">
    <dpg:DrawerPage.actionBar>
      <ActionBar class="action-title" >
        <ActionBar.titleView>
            <StackLayout orientation="horizontal">
                <Label text="Explore NASA DataBank" />
            </StackLayout>
        </ActionBar.titleView>
        <android>
            <ActionItem icon="res://ic_menu" tap="{{ toggleDrawer }}" />
        </android>
        <ios>
            <ActionItem icon="res://ic_menu" ios.position="left" tap="{{ toggleDrawer }}" />
        </ios>
      </ActionBar>
    </dpg:DrawerPage.actionBar>

    <dpg:DrawerPage.sideDrawer>
        <drawer:RadSideDrawer id="sideDrawer">
            <drawer:RadSideDrawer.drawerContent>
                <StackLayout>
                    <StackLayout>
                        <Label text="Navigation Menu"/>
                    </StackLayout>
                    <ScrollView>
                        <StackLayout>
                            <Button text="Main Page" tap="{{ goToMainPage }}"  />
                            <Button text="Mars Rovers Photos" tap="{{ goToRoversSelectionPage }}" />
                            <Button text="Astronomy Pic of the Day"  tap="{{ goToApod }}"/>
                            <Button text="Asteroids" />
                            <Button text="EONET" />
                            <Button text="Earth" />
                            <Button text="Space Sounds" />
                        </StackLayout>
                    </ScrollView>
                </StackLayout>
            </drawer:RadSideDrawer.drawerContent>
        </drawer:RadSideDrawer> 
    </dpg:DrawerPage.sideDrawer>
    
    <ScrollView>
        <StackLayout>
            <StackLayout tap="toggleCur">
                <Label text="Curiosity" class="title" textWrap="true" margin="8" />
                <Card:CardView class="cardStyle" margin="8" elevation="40" radius="50" visibility="{{ showCur ? 'visible' : 'collapsed' }}" >
                    <StackLayout>
                        <DatePicker id="dt-cur" day="15" month="6" year="2014"></DatePicker>
                        <Button text="Curiosity" tap="{{ goToCuriosityPage }}" />                  
                    </StackLayout>
                </Card:CardView>  
            </StackLayout>
            <StackLayout tap="toggleOpp">
                <Label text="Opportunity" class="title" textWrap="true" margin="8" />
                <Card:CardView class="cardStyle" margin="8" elevation="40" radius="50" visibility="{{ showOpp ? 'visible' : 'collapsed' }}" >  
                    <StackLayout>
                        <DatePicker id="dt-opp" day="15" month="6" year="2007"></DatePicker>
                        <Button text="Opportunity" tap="{{ goToOpportunityPage }}" />
                    </StackLayout>
                </Card:CardView>    
            </StackLayout>
            <StackLayout tap="toggleSpi">
                <Label text="Spirit" class="title" textWrap="true" margin="8" />
                <Card:CardView class="cardStyle" margin="8" elevation="40" radius="50" visibility="{{ showSpi? 'visible' : 'collapsed' }}" >
                    <StackLayout>
                        <DatePicker id="dt-spi" day="15" month="6" year="2008"></DatePicker>
                        <Button text="Spirit" tap="{{ goToSpiritPage }}" />
                    </StackLayout>
                </Card:CardView>  
            </StackLayout>
        </StackLayout>  
    </ScrollView>    
</dpg:DrawerPage>