<Page xmlns="http://www.nativescript.org/tns.xsd" 
    actionBarHidden="true"
    xmlns:Card="nativescript-cardview"
    xmlns:widgets="views/rovers/widgets"
    loaded="onPageLoaded" 
    navigatedTo="onPageNavigatedTo">


    <TabView id="tabViewContainer" selectedIndex="{{ tabIndex }}" loaded="onTabLoaded" class="tab">
        <TabView.items>
            <TabViewItem title="Curiosity">
                <TabViewItem.view>

                    <widgets:curiosity />
   
                </TabViewItem.view>
            </TabViewItem>
            <TabViewItem title="Opportunity">
                <TabViewItem.view>

                    <widgets:opportunity />

                </TabViewItem.view>
            </TabViewItem>
            <TabViewItem title="Spirit">
                <TabViewItem.view>

                    <widgets:spirit />

                </TabViewItem.view>
            </TabViewItem>        
        </TabView.items>
    </TabView>

</Page>