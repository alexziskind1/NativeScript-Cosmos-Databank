<Page xmlns="http://www.nativescript.org/tns.xsd" 
    xmlns:Card="nativescript-cardview"
    class="drawer-page"
    loaded="onPageLoaded" navigatedTo="onNavigatedTo">
    
    <Page.actionBar>
      <ActionBar>
        <ActionBar.titleView>
            <GridLayout >
                <Label text="COSMOS Data Bank" class="action-title"/>
            </GridLayout>
        </ActionBar.titleView>
      </ActionBar>
    </Page.actionBar>

    <ScrollView>
        <StackLayout loaded="onStackLoaded" id="pageContainer" class="page-container">
            <StackLayout tap="toggleCur">
                <Label text="Curiosity" class="title" textWrap="true" margin="8" />
                <Card:CardView class="cardStyle" margin="8" elevation="40" radius="50" visibility="{{ showCur ? 'visible' : 'collapsed' }}" >
                    <StackLayout>
                        <DatePicker id="dt-cur" class="date-picker" day="15" month="6" year="2014"></DatePicker>
                        <Button text="Curiosity" class="btn-picker" tap="{{ goToCuriosityPage }}" />                  
                    </StackLayout>
                </Card:CardView>  
            </StackLayout>
            <StackLayout tap="toggleOpp">
                <Label text="Opportunity" class="title" textWrap="true" margin="8" />
                <Card:CardView class="cardStyle" margin="8" elevation="40" radius="50" visibility="{{ showOpp ? 'visible' : 'collapsed' }}" >  
                    <StackLayout>
                        <DatePicker id="dt-opp" class="date-picker" day="15" month="6" year="2007"></DatePicker>
                        <Button text="Opportunity" class="btn-picker" tap="{{ goToOpportunityPage }}" />
                    </StackLayout>
                </Card:CardView>    
            </StackLayout>
            <StackLayout tap="toggleSpi">
                <Label text="Spirit" class="title" textWrap="true" margin="8" />
                <Card:CardView class="cardStyle" margin="8" elevation="40" radius="50" visibility="{{ showSpi? 'visible' : 'collapsed' }}" >
                    <StackLayout>
                        <DatePicker id="dt-spi" class="date-picker" day="15" month="6" year="2008"></DatePicker>
                        <Button text="Spirit" class="btn-picker" tap="{{ goToSpiritPage }}" />
                    </StackLayout>
                </Card:CardView>  
            </StackLayout>
        </StackLayout>  
    </ScrollView>
</Page>