<dpg:DrawerPage xmlns="http://www.nativescript.org/tns.xsd" 
    xmlns:dpg="nativescript-telerik-ui/sidedrawer/drawerpage"
    xmlns:drawer="nativescript-telerik-ui/sidedrawer"
    class="drawer-page"
    loaded="onPageLoaded" navigatedTo="onNavigatedTo">

    <dpg:DrawerPage.actionBar>
      <ActionBar class="action-title" >
        <ActionBar.titleView>
            <StackLayout orientation="horizontal">
                <Label text="Explore NASA DataBank" />
            </StackLayout>
        </ActionBar.titleView>
        <android>
            <ActionItem icon="res://ic_menu" tap="{{ toggleDrawer }}" />
        </android>
        <ios>
            <ActionItem icon="res://ic_menu" ios.position="left" tap="{{ toggleDrawer }}" />
        </ios>
      </ActionBar>
    </dpg:DrawerPage.actionBar>

    <dpg:DrawerPage.sideDrawer>
        <drawer:RadSideDrawer id="sideDrawer">
            <drawer:RadSideDrawer.drawerContent>
                <StackLayout>
                    <StackLayout>
                        <Label text="Navigation Menu"/>
                    </StackLayout>
                    <ScrollView>
                        <StackLayout>
                            <Button text="Main Page" tap="{{ goToMainPage }}"  />
                            <Button text="Mars Rovers Photos" tap="{{ goToRoversSelectionPage }}" />
                            <Button text="Astronomy Pic of the Day" />
                            <Button text="Asteroids" />
                            <Button text="EONET" />
                            <Button text="Earth" />
                            <Button text="Space Sounds" />
                        </StackLayout>
                    </ScrollView>
                </StackLayout>
            </drawer:RadSideDrawer.drawerContent>
        </drawer:RadSideDrawer> 
    </dpg:DrawerPage.sideDrawer>


  <StackLayout cssClass="mainContent">
      <Label text="{{ exampleText }}" textWrap="true" cssClass="drawerContentText"/>
  </StackLayout>   
</dpg:DrawerPage>