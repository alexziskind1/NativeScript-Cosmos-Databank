<dpg:DrawerPage xmlns="http://www.nativescript.org/tns.xsd" 
    xmlns:dpg="nativescript-telerik-ui/sidedrawer/drawerpage"
    xmlns:drawer="nativescript-telerik-ui/sidedrawer"
    xmlns:Card="nativescript-cardview"
    loaded="onPageLoaded" navigatedTo="onNavigatedTo"
    class="dp-all">

    <dpg:DrawerPage.actionBar>
      <ActionBar>
        <ActionBar.titleView>
            <StackLayout orientation="horizontal">
                <Label text="COSMOS Data Bank" />
            </StackLayout>
        </ActionBar.titleView>
        <ActionItem icon="res://ic_menu" ios.position="right" tap="{{ toggleDrawer }}" />
      </ActionBar>
    </dpg:DrawerPage.actionBar>

    <dpg:DrawerPage.sideDrawer>
        <drawer:RadSideDrawer id="sideDrawer" showOverNavigation="true">
            <drawer:RadSideDrawer.drawerContent>
                <StackLayout class="dp-drawer-content">
                    <StackLayout class="dp-header-content">
                        <Label text="Navigation Menu" horizontalAlignment="center" />
                    </StackLayout>
                    <ScrollView>
                        <StackLayout>
                            <Button text="Home" tap="{{ goToHome }}" class="dp-action-button" />
                            <Button text="Mars Rovers Photos" tap="{{ goToRoversSelectionPage }}" class="dp-action-button" />
                            <Button text="Astronomy Pic of the Day" tap="{{ goToApod }}" class="dp-action-button" />
                            <Button text="Astreroids Proximity Checker" tap="{{ goToAsteroids }}" class="dp-action-button" />
                            <Button text="About" tap="{{ goToAbout }}" class="dp-action-button" />
                        </StackLayout>
                    </ScrollView>
                </StackLayout>
            </drawer:RadSideDrawer.drawerContent>
        </drawer:RadSideDrawer> 
    </dpg:DrawerPage.sideDrawer>
    
    <ScrollView>
        <StackLayout cssClass="dp-main-content">
            <Label text="{{ exampleText }}" textWrap="true" class="dp-drawer-content-text"/>

            <Card:CardView margin="8" elevation="40" radius="20"> 
                <GridLayout rows="160" columns="2*, 3*" horizontalAlignment="stretch" tap="{{ goToRoversSelectionPage }}" >
                    <Label col="0" text="{{ roversDescription }}" textWrap="true" class="dp-textview" />
                    <Image col="1" src="~/images/NASA_Mars_Rover.jpg" stretch="aspectFill" />    
                </GridLayout>
            </Card:CardView>

            <Card:CardView margin="8" elevation="40" radius="20">  
                <GridLayout rows="160" columns="3*, 2*" horizontalAlignment="stretch" textAlignment="right" tap="{{ goToApod }}" >
                    <Image col="0" src="~/images/cosmos.jpg" stretch="aspectFill" />   
                    <Label col="1" text="{{ apodDescription }}" textWrap="true" class="dp-textview" />
                </GridLayout>
            </Card:CardView>

            <Card:CardView margin="8" elevation="40" radius="20">  
                <GridLayout rows="160" columns="2*, 3*" horizontalAlignment="stretch" textAlignment="right" tap="{{ goToAsteroids }}" >
                    <Label col="0" text="{{ asteroidsDescription }}" textWrap="true" class="dp-textview" />
                    <Image col="1" src="~/images/aste.jpg" stretch="aspectFill" />    
                </GridLayout>
            </Card:CardView>

            <Card:CardView margin="8" elevation="40" radius="20" >  
                <GridLayout rows="40" columns="*" horizontalAlignment="stretch"  tap="{{ goToAbout }}">
                    <Label text="Credits" textWrap="true" class="dp-textview" />
                </GridLayout>
            </Card:CardView>

        </StackLayout>          
    </ScrollView>

</dpg:DrawerPage>