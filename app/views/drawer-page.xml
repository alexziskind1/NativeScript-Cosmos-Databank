<dpg:DrawerPage xmlns="http://www.nativescript.org/tns.xsd" 
    xmlns:dpg="nativescript-telerik-ui/sidedrawer/drawerpage"
    xmlns:drawer="nativescript-telerik-ui/sidedrawer"
    xmlns:Card="nativescript-cardview"
    loaded="onPageLoaded" navigatedTo="onPageNavigatedTo"
    class="dp-bg main-font">

    <dpg:DrawerPage.actionBar>
      <ActionBar>
        <ActionBar.titleView>
            <GridLayout >
                <Label text="COSMOS Data Bank" class="h2 text-center"/>
            </GridLayout>
        </ActionBar.titleView>
        <ActionItem icon="res://ic_menu" ios.position="right" tap="{{ toggleDrawer }}" />
      </ActionBar>
    </dpg:DrawerPage.actionBar>

    <dpg:DrawerPage.sideDrawer>
        <drawer:RadSideDrawer id="sideDrawer" showOverNavigation="true">
            <drawer:RadSideDrawer.drawerContent>
                <StackLayout class="dp-bg-dark m-r-30">   
                    <ScrollView>
                        <StackLayout>
                             <GridLayout rows="120" columns="3*, 2*" class="m-8">
                                <Image col="0" src="~/images/cosmos.jpg" stretch="aspectFill" />  
                                <Label col="1" text="Navigate through the Universe" textAlignment="center" textWrap="true" verticalAlignment="center" />    
                            </GridLayout>
                            <Button text="Home" tap="{{ goToHome }}" class="btn btn-primary btn-active dp-btn" />
                            <Button text="Mars Rovers Photos" tap="{{ goToRoversSelectionPage }}" class="btn btn-primary btn-active dp-btn" />
                            <Button text="Astronomy Pic of the Day" tap="{{ goToApod }}" class="btn btn-primary btn-active dp-btn" />
                            <Button text="Astreroids Proximity Checker" tap="{{ goToAsteroids }}" class="btn btn-primary btn-active dp-btn" />
                            <Button text="EPIC" tap="{{ goToEpic }}" class="btn btn-primary btn-active dp-btn" />
                            <Button text="About" tap="{{ goToAbout }}" class="btn btn-primary btn-active dp-btn" />
                        </StackLayout>
                    </ScrollView>
                </StackLayout>
            </drawer:RadSideDrawer.drawerContent>
        </drawer:RadSideDrawer> 
    </dpg:DrawerPage.sideDrawer>
    
    <ScrollView>
        <StackLayout>
            <Card:CardView elevation="40" radius="20" class="m-t-8 m-l-8 m-r-8 dp-card"> 
                <GridLayout rows="*" columns="*" tap="hideDesc">
                    <Label text="{{ exampleText }}" textWrap="true" class="p-8 h4 text-left"/>    
                </GridLayout>
            </Card:CardView> 
            <Card:CardView elevation="40" radius="20" class="m-t-8 m-l-8 m-r-8 dp-card"> 
                <GridLayout rows="160" columns="2*, 3*" tap="{{ goToRoversSelectionPage }}" >
                    <Label col="0" text="{{ roversDescription }}" textWrap="true" class="h3 text-center" verticalAlignment="center"/>
                    <Image col="1" src="~/images/NASA_Mars_Rover.jpg" stretch="aspectFill" />   
                </GridLayout>
            </Card:CardView>
            <Card:CardView elevation="40" radius="20" class="m-t-8 m-l-8 m-r-8 dp-card">  
                <GridLayout rows="160" columns="3*, 2*" tap="{{ goToApod }}" >
                    <Image col="0" src="~/images/cosmos.jpg" stretch="aspectFill" />  
                    <Label col="1" text="{{ apodDescription }}" textWrap="true" class="h3 text-center" verticalAlignment="center"/>
                </GridLayout>
            </Card:CardView>
            <Card:CardView elevation="40" radius="20" class="m-t-8 m-l-8 m-r-8 dp-card">  
                <GridLayout rows="160" columns="2*, 3*" tap="{{ goToAsteroids }}" >
                    <Label col="0" text="{{ asteroidsDescription }}" textWrap="true" class="h3 text-center" verticalAlignment="center" />   
                    <Image col="1" src="~/images/aste.jpg" stretch="aspectFill" />    
                </GridLayout>
            </Card:CardView>
            <Card:CardView elevation="40" radius="20" class="m-8 dp-card">  
                <GridLayout rows="40" columns="*" tap="{{ goToAbout }}">
                    <Label text="Credits" textWrap="true" class="h3 text-center" verticalAlignment="center" />
                </GridLayout>
            </Card:CardView>
        </StackLayout>          
    </ScrollView>

</dpg:DrawerPage>