<dpg:DrawerPage xmlns="http://www.nativescript.org/tns.xsd" 
    xmlns:dpg="nativescript-telerik-ui/sidedrawer/drawerpage"
    xmlns:drawer="nativescript-telerik-ui/sidedrawer"
    xmlns:Card="nativescript-cardview"
    loaded="onPageLoaded" navigatedTo="onPageNavigatedTo"
    class="dp-all">

    <dpg:DrawerPage.actionBar>
      <ActionBar>
        <ActionBar.titleView>
            <GridLayout >
                <Label text="COSMOS Data Bank" class="action-title"/>
            </GridLayout>
        </ActionBar.titleView>
        <ActionItem icon="res://ic_menu" ios.position="right" tap="{{ toggleDrawer }}" />
      </ActionBar>
    </dpg:DrawerPage.actionBar>

    <dpg:DrawerPage.sideDrawer>
        <drawer:RadSideDrawer id="sideDrawer" showOverNavigation="true">
            <drawer:RadSideDrawer.drawerContent>
                <StackLayout class="dp-drawer-content">
                    <StackLayout class="dp-header-content">
                        <Label text="Navigation Menu" textAlignment="center" />
                    </StackLayout>
                    <ScrollView>
                        <StackLayout>
                            <Button text="Home" tap="{{ goToHome }}" class="dp-action-button" />
                            <Button text="Mars Rovers Photos" tap="{{ goToRoversSelectionPage }}" class="dp-action-button" />
                            <Button text="Astronomy Pic of the Day" tap="{{ goToApod }}" class="dp-action-button" />
                            <Button text="Astreroids Proximity Checker" tap="{{ goToAsteroids }}" class="dp-action-button" />
                            <Button text="About" tap="{{ goToAbout }}" class="dp-action-button" />
                        </StackLayout>
                    </ScrollView>
                </StackLayout>
            </drawer:RadSideDrawer.drawerContent>
        </drawer:RadSideDrawer> 
    </dpg:DrawerPage.sideDrawer>
    
    <ScrollView>
        <StackLayout cssClass="dp-main-content">

            <Card:CardView elevation="40" radius="20" class="dp-cardview"> 
                <GridLayout rows="*" columns="*" class="dp-grid" tap="hideDesc">
                    <Label text="{{ exampleText }}" textWrap="true" class="dp-drawer-content-text"/>    
                </GridLayout>
            </Card:CardView> 


            <Card:CardView elevation="40" radius="20" class="dp-cardview"> 
                <GridLayout rows="160" columns="2*, 3*" class="dp-grid" tap="{{ goToRoversSelectionPage }}" >
                    <Label col="0" text="{{ roversDescription }}" textWrap="true" textAlignment="center" verticalAlignment="center" />
                    <ios>
                        <Image col="1" src="~/images/NASA_Mars_Rover.jpg" stretch="aspectFill" />   
                    </ios>
                    <android>
                        <Image col="1" src="~/images/NASA_Mars_Rover.jpg" stretch="aspectFill" />   
                    </android> 
                </GridLayout>
            </Card:CardView>

            <Card:CardView elevation="40" radius="20" class="dp-cardview">  
                <GridLayout rows="160" columns="3*, 2*" class="dp-grid" tap="{{ goToApod }}" >
                    <ios>
                        <Image col="0" src="~/images/cosmos.jpg" stretch="aspectFill" />  
                    </ios>
                    <android>
                        <Image col="0" src="~/images/cosmos.jpg" stretch="aspectFill" />    
                    </android>       
                    <Label col="1" text="{{ apodDescription }}" textAlignment="center" textWrap="true" verticalAlignment="center" />
                </GridLayout>
            </Card:CardView>

            <Card:CardView elevation="40" radius="20" class="dp-cardview">  
                <GridLayout rows="160" columns="2*, 3*" class="dp-grid" tap="{{ goToAsteroids }}" >
                    <Label col="0" text="{{ asteroidsDescription }}" textAlignment="center" textWrap="true" verticalAlignment="center" />   
                    <ios>
                        <Image col="1" src="~/images/aste.jpg" stretch="aspectFill" />  
                    </ios>
                    <android>
                        <Image col="1" src="~/images/aste.jpg" stretch="aspectFill" />   
                    </android>     
                </GridLayout>
            </Card:CardView>

            <Card:CardView elevation="40" radius="20" class="dp-cardview">  
                <GridLayout rows="40" columns="*" class="dp-grid" tap="{{ goToAbout }}">
                    <Label text="Credits" textWrap="true" textAlignment="center" verticalAlignment="center" />
                </GridLayout>
            </Card:CardView>

        </StackLayout>          
    </ScrollView>

</dpg:DrawerPage>