<Page xmlns="http://www.nativescript.org/tns.xsd" loaded="onPageLoaded" navigatedTo="onPageNavigatedTo">
    <StackLayout>
        <Label text="{{ contextItem.neo_reference_id }}" textWrap="true" />
        <Label text="{{ contextItem.name }}" textWrap="true" />
        <Label text="{{ contextItem.nasa_jpl_url }}" textWrap="true" />    
        <Label text="{{ contextItem.absolute_magnitude_h }}" textWrap="true" />

        <Label text="{{ contextItem.estimated_diameter.kilometers.estimated_diameter_min }}" textWrap="true" />
        <Label text="{{ contextItem.estimated_diameter.kilometers.estimated_diameter_max }}" textWrap="true" />

        <Label text="{{ contextItem.estimated_diameter.meters.estimated_diameter_min }}" textWrap="true" />
        <Label text="{{ contextItem.estimated_diameter.meters.estimated_diameter_max }}" textWrap="true" />

        <Label text="{{ contextItem.is_potentially_hazardous_asteroid }}" textWrap="true" />
        
        <!--fix the model for close_approach_data - currently working for arr[0]-->
        <Label text="{{ contextItem.close_approach_data.close_approach_date }}" textWrap="true" />
        <Label text="{{ contextItem.close_approach_data.miss_distance.astronomical }}" textWrap="true" />
        <Label text="{{ contextItem.close_approach_data.miss_distance.kilometers }}" textWrap="true" />
        <Label text="{{ contextItem.close_approach_data.orbiting_body }}" textWrap="true" />      
    </StackLayout>
</Page>