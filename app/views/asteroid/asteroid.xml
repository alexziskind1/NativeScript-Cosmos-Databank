<Page xmlns="http://www.nativescript.org/tns.xsd" 
        actionBarHidden="true"
        loaded="onPageLoaded">
        
    <StackLayout>
        <Label text="{{ asteroidCount == 0 ? 'counting near by asteroids' : asteroidCount + ' asteroids will fly near in the next 5 days'}}" textWrap="true" />
        <ListView items="{{ dataItems }}"  loaded="onLoaded" itemLoading="onItemLoading" itemTap="onItemTap">
            <ListView.itemTemplate>
                <StackLayout class="item-container">
                    <Label text="{{ name }}" textWrap="true" class="lbl-asteroid-name" /> 
                </StackLayout>
            </ListView.itemTemplate>
        </ListView>
    </StackLayout>
</Page>